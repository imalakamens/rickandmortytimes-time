<!DOCTYPE html>
<html>
  <head>
    <title>Rick and Morty Times Time</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="container">
    <h1 class="jumbotron text-center">Rick and Morty Episodes</h1>
      <div class="row">
        <div class="col-xs-6 col-xs-offset-6">
          <form action="/" method="GET">
            <div class="input-group">
              <input type="text" name="episode" class="form-control" placeholder="Enter an episode #">
              <span class="input-group-btn">
                <button class="btn btn-success" type="submit">BuRp!</button>
              </span>
            </div>
          </form>
        </div>
      </div>

      <hr>
      <div class="row col-xs-8 col-xs-offset-2">
        <% if (epData.id) { %> 
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <h2><%= epData.name %></h2>
            </div>
            <div class="panel-body text-center">
              <h4><%= epData.episode %></h4>
              <h4><%= epData.air_date %></h4>
              <h3>Characters:</h3>
              <ul>
                <% epData.characters.forEach(character => { %>
                  <li><%= character %></li>
                <% }); %>
              </ul>
            </div>
          </div>
        <% } else { %>
          <h3 class="text-center text-info">
            Sumbit an episode!
          </h3>
        <% } %> 
      </div>
  </body>
</html>
